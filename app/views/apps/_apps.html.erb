<% @apps.each do |app| %>

<div class="single_app">
    <% if app.image %>
      <%=link_to app_path(app) do %>
        <%= image_tag attachment_url(app, :image, :fill, 350, 200) %>
      <%end%>
    <%end%>
    <br>
    <strong><%=link_to app.name, app_path(app)%></strong>
    <p>
      by <%=link_to app.user.email, user_path(app.user), :class => "alt_a" %>
    </p>
  <p>
    <%= truncate(app.description , length: 100, omission: '...')%>
  </p>
    <div class="small-app-detail">
    <div class="progress">
      <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: <%= app.commitments.count*100/app.developers_needed*100/100%>%">
        <%= app.commitments.count*100/app.developers_needed*100/100%>%
        <span class="sr-only">40% Complete (success)</span>
      </div>
    </div>
    <div class="mini-app-detail">
        <span ><%=app.developers_needed %> developer needed </span>
      <span ><%= app.commitments.count*100/app.developers_needed*100/100%>%</span>
      <span >24</li></span>
    </div>
  </div>
</div>

<%end%>
