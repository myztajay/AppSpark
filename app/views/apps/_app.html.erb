<div class="creator_container">
<h3>Created by </h3>
<p>
  <%= link_to @app.user.email, user_path(@app.user.id) %>
</p>
</div>

<div class="title_container">
  <h1><%= @app.name.capitalize %> </h1><Br>
    asdasdas asdasd asd  asdas asd asd ads
</div>

<div class="img_container">
  <img src="https://images6.alphacoders.com/648/648005.png"  />
</div>

<div class="app_details">
  <% if user_signed_in? %>
    <% if @app.user_id === current_user.id %>
      <%= link_to "Edit this App", edit_app_path(@app) %>
      <%= link_to "Delete this App", app_path(@app), method: :delete, data: {confirm: "Are you sure?"}%>
    <% end %>
  <%end%>
  <h2>description</h2><p>
    <%= @app.description %>
  </p>

  <h2>Requirements </h2><p>
    <%= @app.requirements %>
  </p>

  <h2>Developers Needed</h2><p>
     <%=@app.name.capitalize%> has <%=@app.commitments.count%> and needs <%=@app.developers_needed %>
    <div class="progress">
    <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: <%= @app.commitments.count*100/@app.developers_needed*100/100%>%">
      <%= @app.commitments.count*100/@app.developers_needed*100/100%>%
      <span class="sr-only">40% Complete (success)</span>
    </div>
  </div>
  <h2>Tags</h2>
    <%@app.tag_list.each do |x| %>
  <%= link_to x, tag_path(x) %>
    <%end%>
  </p>
</div>

<div class="mini_nav_container">
  <ul class="list-inline">
    <li><h3><%=link_to "Overview", app_path(@app, :link_title=>"overview"), remote:true %></h3></li>
    <li><h3><%=link_to "Commitments", app_path(@app, :link_title=>"commitments"), remote:true %></h3></li>
    <li><h3><%=link_to "Github", app_path(@app, :link_title=>"github"), remote:true %></h3></li>
    <li><h3><%=link_to "Comments", app_path(@app, :link_title=>"comments"), remote:true %></h3></li>
  </ul>
</div>
<div id="app_content">

</div>
