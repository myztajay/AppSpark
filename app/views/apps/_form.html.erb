


 
    <%= form_for @app, :html => {:class => "form-inline"} do |f| %>
      <div class=" new-form ">
          <div class='form-text-fields'>
          <%= f.text_field :name, placeholder: "Name", class: 'form-field' %><br>
          <%= f.text_field :requirements, placeholder: "Requirements", class: 'form-field'%><br>
          <%= f.text_field :description, placeholder: "Description", class: 'form-field'%><br>
    
          <% if @app.repo? %>
            <%= f.label :repo%><br>
            <%= f.text_field :repo%><br>
          <% end %>
    
          <%= f.text_field :tag_list, placeholder: "Tags seperated with commas", class: 'form-field' %><br>
          <div class='dev-needed'>
          <%= f.label :developers_needed%><br>
          <%= f.select :developers_needed ,options_for_select(1..15) %><br>
          </div>
          </div>
          <div class='form-image'>
          
          <%= image_tag attachment_url(@app, :image, :fill, 100, 100, fallback: "default-form-img.jpg") %>
          <br>
          <%= f.attachment_field :image, class: 'form-field' %>
          <div>
          <%= f.check_box :remove_image , class: 'check-box' %>
          <%= f.label :remove_image %><br>
          </div>
          </div>
    
          <%= f.submit  class: 'btn btn-primary create-btn rounded-circle' %>
        
        </div> 
    <%end%>


