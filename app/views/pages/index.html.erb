<header class='masthead text-center'>
    <div class='header-content mx-auto'>
        <h1> where apps get started.</h1>
        <button class='btn btn-primary'> Get Started</button>
        
    </div>
</header>

<section class='section-alt'>
    <div class='container app-container'>
        <div class='faq-content text-center'><i class="fa fa-user-circle-o fa-7x" aria-hidden="true"></i><h1> Step 1</h1><H3 class='text-muted'>Signup to Appspark<%= link_to ' here ', new_user_registration_path %>and create your first app.</H3></div>
        <div class='faq-content text-center'><i class="fa fa-tasks fa-7x" aria-hidden="true"></i><p><h1>Step 2</h1><h3 class='text-muted'>Find collaborators and gather a team to work on your project.</h3></p></div>
        <div class='faq-content text-center'><i class="fa fa-globe fa-7x" aria-hidden="true"></i><p><h1>Step 3</h1><h3 class='text-muted'> Release your app and change the world.</h3></p></div>
    </div>
</section>

<section class='section-primary'>
  <div class='container mini-header'>
    <h3>Most Popular</h3>
    <%= link_to "See More", apps_path , class: 'ml-auto btn btn-primary create-button' %>
  </div>
  <div class='container app-container no-top-margin'>
    <%= render './apps/pop_apps' %>
  </div>
  <div class='container mini-header'>
  <h3>Newest</h3>
    <%= link_to "See More", apps_path , class: 'ml-auto btn btn-primary create-button' %>
  </div>
  <div class='container app-container no-top-margin'  id='apps'>
    <%= render './apps/apps' %>
    
  </div>
  <div id='loader'></div>

</section>

